{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "orchestrator-app",
  "version": "0.1.0",
  "identifier": "com.calvin.orchestrator-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Orchestrator",
        "label": "main",
        "url": "index.html",
        "width": 400,
        "height": 300,
        "visible": false,
        "resizable": false
      },
      {
        "title": "Orchestrator Settings",
        "label": "settings",
        "url": "settings.html",
        "width": 600,
        "height": 700,
        "visible": false,
        "resizable": true
      },
      {
        "title": "Orchestrator Status",
        "label": "status",
        "url": "status.html",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "all": true,
      "open": true
    },
    "store": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
